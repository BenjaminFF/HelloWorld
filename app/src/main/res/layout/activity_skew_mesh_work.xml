<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.benja.helloworld.SkewMesh.SkewMeshWork">
        <RelativeLayout
            android:id="@+id/mesh_bar"
            android:background="@color/metallic_seaweed"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="4dp"
            >
            <TextView
                android:layout_marginTop="15dp"
                android:text="SKEW MESH"
                android:textSize="25dp"
                android:letterSpacing="0.1"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/mesh_recycler"
            android:layout_below="@+id/mesh_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
</RelativeLayout>
