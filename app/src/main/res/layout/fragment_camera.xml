<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.benja.helloworld.SkewMesh.Mesh_Metrix.CameraFragment">

    <android.support.v7.widget.CardView
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="12"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:weightSum="8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.SnapView
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:background="@drawable/cusm_trans_edittext"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="18dp"
                        android:textColor="@color/dark"
                        android:text="rotateX"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="18dp"
                        android:textColor="@color/dark"
                        android:text="rotateY"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="18dp"
                        android:textColor="@color/dark"
                        android:text="rotateZ"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.example.benja.helloworld.SkewMesh.Mesh_Metrix.SnapView>
                <EditText
                    android:layout_marginLeft="10dp"
                    android:hint="deg"
                    android:cursorVisible="false"
                    android:gravity="center"
                    android:background="@drawable/cusm_trans_edittext"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.Rotate3dView
                android:layout_weight="5.5"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/cusm_trans_edittext"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </com.example.benja.helloworld.SkewMesh.Mesh_Metrix.Rotate3dView>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_weight="5.5"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/cusm_trans_edittext"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
