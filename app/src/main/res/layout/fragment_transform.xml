<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.benja.helloworld.SkewMesh.Mesh_Metrix.TranformFragment">

    <android.support.v7.widget.CardView
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/pistachio"
            android:orientation="vertical"
            android:weightSum="12"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                        <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.SnapView
                            android:background="@drawable/cusm_trans_edittext"
                            android:id="@+id/prepost_snapView"
                            app:Orientation="Vertical"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.MyTextView
                                app:text="pre"
                                app:textSize="18dp"
                                app:textColor="@color/dark"
                                app:textStrokeWidth="0.1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.MyTextView
                                app:text="post"
                                app:textSize="18dp"
                                app:textColor="@color/dark"
                                app:textStrokeWidth="0.1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </com.example.benja.helloworld.SkewMesh.Mesh_Metrix.SnapView>
                    <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.SnapView
                        android:id="@+id/transform_snapview"
                        android:layout_weight="1"
                        android:background="@drawable/cusm_trans_edittext"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.MyTextView
                            app:text="translate"
                            app:textSize="18dp"
                            app:textColor="@color/dark"
                            app:textStrokeWidth="0.1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.MyTextView
                            app:text="scale"
                            app:textSize="18dp"
                            app:textColor="@color/dark"
                            app:textStrokeWidth="0.1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.example.benja.helloworld.SkewMesh.Mesh_Metrix.SnapView>
                    <EditText
                        android:hint="x"
                        android:id="@+id/coordx_text"
                        android:cursorVisible="false"
                        android:textSize="18dp"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/cusm_trans_edittext"
                        android:layout_weight="0.75"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <EditText
                        android:hint="y"
                        android:id="@+id/coordy_text"
                        android:cursorVisible="false"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/cusm_trans_edittext"
                        android:layout_weight="0.75"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:weightSum="4"
                android:layout_weight="2.7"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:hint="x"
                        android:id="@+id/originx_text"
                        android:cursorVisible="false"
                        android:textSize="18dp"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:gravity="center"
                        android:background="@drawable/cusm_trans_edittext"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <EditText
                        android:hint="y"
                        android:id="@+id/originy_text"
                        android:cursorVisible="false"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/cusm_trans_edittext"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/cusm_trans_edittext"
                    android:orientation="vertical"
                    android:weightSum="4"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:weightSum="4"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.MetrixView
                            android:id="@+id/matrix_origin"
                            app:column="3"
                            app:row="3"
                            app:cellWidth="20dp"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.MetrixView
                            android:id="@+id/matrix_transform"
                            app:column="3"
                            app:row="3"
                            app:cellWidth="20dp"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="4"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/matrix_origin_text"
                            android:textColor="@color/dark"
                            android:text="origin"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/matrix_transform_text"
                            android:textColor="@color/dark"
                            android:text="transform"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:weightSum="4"
                android:layout_weight="2.3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:background="@drawable/cusm_trans_edittext"
                    android:weightSum="4.5"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.MetrixView
                        android:id="@+id/matrix_view_result"
                        app:column="1"
                        app:row="3"
                        app:cellWidth="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="@color/dark"
                        android:text="="
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.MetrixView
                        android:id="@+id/matrix_view_transform"
                        app:column="3"
                        app:row="3"
                        app:cellWidth="20dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.MetrixView
                        android:id="@+id/matrix_view_origin"
                        app:column="1"
                        app:row="3"
                        app:cellWidth="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/transform_text_click"
                        android:background="@drawable/cusm_trans_edittext"
                        android:text="trans"
                        android:textColor="@color/dark"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:id="@+id/enter_text_click"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/cusm_trans_edittext"
                        android:text="enter"
                        android:textColor="@color/dark"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                </LinearLayout>

            </LinearLayout>
            <com.example.benja.helloworld.SkewMesh.Mesh_Metrix.CoordView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/cusm_trans_edittext"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
