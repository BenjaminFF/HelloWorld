<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomBar">
        <attr name="items_xml" format="integer"/>
        <attr name="icon_size" format="dimension"/>
        <attr name="middle_icon_size" format="dimension"/>
        <attr name="bb_active_color" format="color"/>
            <attr name="bb_unactive_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="SnapView">
        <attr name="Orientation" format="enum">
            <enum name="Vertical" value="0"/>
            <enum name="Horizontal" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="MetrixView">
       <attr name="row" format="integer"/>
        <attr name="column" format="integer"/>
        <attr name="cellWidth" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="MyTextView">
        <attr name="text" format="string"/>
        <attr name="textStrokeWidth" format="float"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MyImageView">
        <attr name="ScaleType" format="enum">
            <enum name="Center" value="0"/>
            <enum name="CenterCrop" value="1"/>
            <enum name="Center_Inside" value="2"/>
        </attr>
        <attr name="src" format="reference"/>
    </declare-styleable>

    <declare-styleable name="Rotate3dView">
        <attr name="Orientation" format="enum">
            <enum name="Vertical" value="0"/>
            <enum name="Horizontal" value="1"/>
        </attr>
        <attr name="Loopable" format="boolean"/>
    </declare-styleable>
</resources>